{
  "manifest_version": 2,
  "name": "AI Email Reply Generator",
  "version": "1.0.0",
  "description": "Generate AI-powered email replies with custom instructions",
  "permissions": [
    "compose",
    "messagesRead",
    "storage",
    "nativeMessaging",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "compose_action": {
    "default_title": "AI Reply Generator",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "popup.html",
    "popup.css",
    "popup.js"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "applications": {
    "gecko": {
      "id": "mukesh@mkswebs.com",
      "strict_min_version": "115.0"
    }
  }
}